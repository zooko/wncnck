[multiplayer]
    id=wncnck-6p
    name= _ "6p - Doubleyuen Seeyen Seekay"
    random_start_time=yes

#define UNITT TYPE X Y SIDE
    {VARIABLE_OP rep value 0}
    {REPEAT 6 (
        {VARIABLE_OP rep add 1}
        [if]
            [have_unit]
                canrecruit=yes
                side=$rep
            [/have_unit]
            [then]
                [unit]
                    side={SIDE}
                    type={TYPE}
                    x={X}
                    y={Y}
                    random_traits=yes
                    placement=map_passable
                [/unit]
            [/then]
        [/if])}
#enddef
#define UNITT_NONDUPE TYPE X Y SIDE
    [unit]
        side={SIDE}
        type={TYPE}
        x={X}
        y={Y}
        random_traits=yes
        placement=map_passable
    [/unit]
    {REPEAT 6 (
        {VARIABLE_OP rep add 1}
        [if]
            [have_unit]
                canrecruit=yes
                side=$rep
            [/have_unit]
            [then]
                [modify_unit]
                    [filter]
                        x,y={X},{Y}
                    [/filter]
                    {TRAIT_RESILIENT}
                    {TRAIT_INTELLIGENT}
                    {TRAIT_DEXTROUS}
                    {TRAIT_STRONG}
                    {TRAIT_QUICK}
                [/modify_unit]
            [/then]
        [/if])}
#enddef
#define GAURD TYPE X Y SIDE
    {VARIABLE_OP rep value 0}
    [unit]
        side={SIDE}
        type={TYPE}
        x={X}
        y={Y}
        random_traits=no
        placement=map_passable
    [/unit]
    {REPEAT 6 (
        {VARIABLE_OP rep add 1}
        [if]
            [have_unit]
                canrecruit=yes
                side=$rep
            [/have_unit]
            [then]
                [modify_unit]
                    [filter]
                        x,y={X},{Y}
                    [/filter]
                    {TRAIT_RESILIENT}
                    {TRAIT_INTELLIGENT}
                    {TRAIT_DEXTROUS}
                    {TRAIT_STRONG}
                    max_moves=1
                    [movement_costs]
                        shallow_water=2
                        reef=2
                        swamp_water=2
                        flat=2
                        sand=2
                        forest=2
                        hills=2
                        mountains=2
                        village=2
                        castle=2
                        cave=2
                        frozen=2
                        fungus=2
                        village=2
                    [/movement_costs]
                [/modify_unit]
            [/then]
        [/if])}
#enddef

#define UPGRADEIFON SIDE
    [event]
        name=side {SIDE} turn
        allow_undo=yes
        first_time_only=no
        [if]
            [have_unit]
                canrecruit=yes
                x,y=$currdest[{SIDE}].x,$currdest[{SIDE}].y
                side={SIDE}
            [/have_unit]
            [then]
                [modify_unit]
                    [filter]
                        side={SIDE}
                    [/filter]
                    {TRAIT_RESILIENT}
                    {TRAIT_INTELLIGENT}
                    {TRAIT_DEXTROUS}
                    {TRAIT_STRONG}
                    {TRAIT_QUICK}
                [/modify_unit]
                {CHOOSEKEEP {SIDE}}
                [set_variable]
                    name=currdest[{SIDE}].x
                    rand=$destkeep[$currdestnum[{SIDE}].num].x
                [/set_variable]
                [set_variable]
                    name=currdest[{SIDE}].y
                    rand=$destkeep[$currdestnum[{SIDE}].num].y
                [/set_variable]
                [objectives]
                    side={SIDE}
                    [objective]
                        description=_"Survive till turn 70."
                        condition=win
                    [/objective]
                    [note]
                        description=_"Find your way to the friendly keep at x: " $currdest[{SIDE}].x " and y: " $currdest[{SIDE}].y " to gain a bonus to all your units."
                    [/note]
                    [note]
                        description=_"Bonus: strong, intelligent, dextrous, quick, and resilient."
                    [/note]
                [/objectives]
            [/then]
        [/if]
    [/event]
#enddef

#define CHOOSEKEEP NUM
    #[message]
    #	message=_ "Player " {NUM} " is at keep " $currdestnum[{NUM}].num "..."
    #[/message]
    [if]
        [variable]
            name=currdestnum[{NUM}].num
            equals=1
        [/variable]
        [or]
            [variable]
                name=currdestnum[{NUM}].num
                equals=4
            [/variable]
        [/or]
        [or]
            [variable]
                name=currdestnum[{NUM}].num
                equals=5
            [/variable]
        [/or]
        [then]
            #		[message]
            #			message=_ "...is at keep 1, 4, or 5, and going to 2, 3, or 6..."
            #		[/message]
            [set_variable]
                name=currdestnum[{NUM}].num
                rand=1,4,5
            [/set_variable]
        [/then]
        [else]
            #		[message]
            #			message=_ "...is at keep 2, 3, or 6, and going to 1, 4, or 5..."
            #		[/message]
            [set_variable]
                name=currdestnum[{NUM}].num
                rand=2,3,6
            [/set_variable]
        [/else]
    [/if]
    #[message]
    #	message=_ "...and is going to keep " $currdestnum[{NUM}].num "."
    #[/message]
#enddef

#define SIDE NUM
    [side]
        id=Human
        side={NUM}
        can recruit=yes
        controller=human
        team_name=defenders
        gold=75
        color_lock=true
        user_team_name= _ "Defenders"
        team_lock=yes
        fog=yes
        shroud=yes
    [/side]
#enddef

